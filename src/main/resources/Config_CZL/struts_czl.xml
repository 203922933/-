<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <package name="bill" namespace="/" extends="struts-default,json-default">
        <default-class-ref class="action.bill.BillAction"/>
        <action name="GetBillAction_*" method="{1}">
            <result name="success" type="json">
                <param name="root">billEntityList</param>
            </result>
            <allowed-methods>getBill,getBillList,getBillByStatus</allowed-methods>
        </action>
        
        <action name="BillAction_*" method="{1}">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
<!--            <exception-mapping exception="org.springframework.dao.DataIntegrityViolationException"-->
<!--                               result="success">-->
<!--                <param name="root">result</param>-->
<!--            </exception-mapping>-->
            <allowed-methods>saveBill,updateBill,deleteBill</allowed-methods>
        </action>
    </package>

    <package name="repair" namespace="/" extends="struts-default,json-default">
        <default-class-ref class="action.repair.RepairAction"/>
        <action name="RepairAction_*" method="{1}">
            <result name="success" type="json">
                <param name="root">repairEntityList</param>
            </result>
            <allowed-methods>getRepair,getRepairList</allowed-methods>
        </action>

    </package>

</struts>